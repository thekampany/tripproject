version: '3'

services:
  db:
    image: postgres:13
    volumes:
      - tripapp_postgres_data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: tripappdb
      POSTGRES_USER: tripappuser
      POSTGRES_PASSWORD: tripapppassword

  web:
    build: .
    command: python manage.py runserver 0.0.0.0:8043
    volumes:
      - .:/usr/src/app
    ports:
      - "8043:8043"
    depends_on:
      - db
    environment:
      DATABASE_URL: postgres://tripappuser:tripapppassword@db:5432/tripappdb

volumes:
  tripapp_postgres_data:


version: '3.9'

services:
  web:
    build: .
    command: uvicorn tripproject.asgi:application --host 0.0.0.0 --port 8043
    volumes:
      - static_volume:/usr/src/app/staticfiles
    expose:
      - 8043
    environment:
      DATABASE_URL: postgres://tripappuser:tripapppassword@db:5432/tripappdb
    depends_on:
      - db

  nginx:
    image: nginx:latest
    ports:
      - "80:80"
    volumes:
      - static_volume:/usr/src/app/staticfiles
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - web

  db:
    image: postgres:15
    volumes:
      - tripapp_postgres_data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: tripappdb
      POSTGRES_USER: tripappuser
      POSTGRES_PASSWORD: tripapppassword


volumes:
  static_volume:
  tripapp_postgres_data:
